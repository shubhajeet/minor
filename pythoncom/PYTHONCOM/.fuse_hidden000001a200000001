import sys
import socket

class MacCom:

    def __init__(self):
        try:
            self.s = socket.socket(socket.AF_PACKET,socket.SOCK_RAW)
        except socket.error:
            print "error"
            exit()
        self.src_addr = "\x01\x02\x03\x04\x05\x06"
        self.dst_addr = "\x01\x02\x03\x04\x05\x06"
        self.ether_type = "\x08\x01"
        self.s.bind(("enp3s0",0))

    def cCheckSum():
        return "\x1a\x2b\x3c\x4dd"
        
    def send(self, payload):
        s.send(dst_addr+src_addr+ether_type+payload+cCheckSum())

    def receive(self):
        payload = s.recv(2048)
        return payload
        
if __name__ == '__main__':
    connection = MacCom()
    connection.send("Hi how are you");
    connection.receive();
    
    
    
